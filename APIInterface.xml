 <Ui xmlns="http://www.blizzard.com/wow/ui/"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../../FrameXML/UI.xsd">
	
	<!-- Don't touch, this order is important -->
	<Script file="libs\LibStub\LibStub.lua"/>
	<Include file="libs\AceAddon-3.0\AceAddon-3.0.xml"/>
	<Include file="libs\AceDB-3.0\AceDB-3.0.xml"/>
	
	<Script file="APIInterface.lua"/>

	<Button name="APII_SystemButtonTemplate" mixin="APII_SystemButtonMixin" flattenRenderLayers="true" virtual="true">
		<Size y="40"/>
		<Anchors>
			<Anchor point="LEFT"/>
			<Anchor point="RIGHT"/>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Name" inherits="GameFontNormal" maxLines="1" justifyH="LEFT" justifyV="TOP" text="PlayerChoice">
					<Anchors>
						<Anchor point="TOPLEFT" x="10" y="-6"/>
						<Anchor point="RIGHT" x="-10"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Namespace" inherits="GameFontNormalSmall" maxLines="1" justifyH="LEFT" justifyV="TOP" text="C_PlayerChoice">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT" x="6" y="-4"/>
						<Anchor point="RIGHT" x="-4"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="SelectedHighlight" atlas="PetList-ButtonSelect" setAllPoints="true" hidden="true"/>
			</Layer>
		</Layers>
		<NormalTexture atlas="PetList-ButtonBackground"/>
		<HighlightTexture atlas="PetList-ButtonHighlight"/>

		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<Frame name="APII_TextAreaTemplate" mixin="APII_TextAreaMixin" virtual="true">
		<KeyValues>
			<KeyValue key="HitInsetLeft" type="number" value="-20"/>
			<KeyValue key="HitInsetRight" type="number" value="-20"/>
			<KeyValue key="HitInsetTop" type="number" value="-2"/>
			<KeyValue key="HitInsetBottom" type="number" value="-2"/>
		</KeyValues>
		<Frames>
			<SimpleHTML parentKey="Html" resizeToFitContents="true" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
				<FontString inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP" spacing="4" indented="true"/>
				<Scripts>
					<OnHyperlinkClick>
						self:GetParent():GetParent():OnHyperlinkClick(link, text, button);
					</OnHyperlinkClick>
				</Scripts>
			</SimpleHTML>

			<EditBox parentKey="EditBox" mixin="APII_EditBoxMixin" autoFocus="false" multiLine="true" hidden="false">
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
				<HitRectInsets>
					<AbsInset left="-20" right="-20" top="-2" bottom="-2"/>
				</HitRectInsets>
				<FontString parentKey="FontString" inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP" spacing="4" indented="true"/>

				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Checkmark" file="Interface\Scenarios\ScenarioIcon-Check" alpha="0">
							<Size x="16" y="16" />
							<Anchors>
								<Anchor point="TOPRIGHT" relativePoint="TOPLEFT" x="-3"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>

				<Scripts>
					<OnLoad method="OnLoad"/>
					<OnEnterPressed method="OnEnterPressed"/>
					<OnEditFocusLost method="OnEditFocusLost"/>
					<OnKeyDown method="OnKeyDown"/>
					<OnTextChanged method="OnTextChanged"/>
					<OnShow method="OnShow"/>
					<OnHide method="OnHide"/>
				</Scripts>
			</EditBox>
		</Frames>

		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP" spacing="4" hidden="true" nonspacewrap="true" indented="true">
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="APII_TableTextAreaTemplate" inherits="APII_TextAreaTemplate" mixin="APII_TableTextAreaMixin" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" setAllPoints="true" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Color r="1" g="0" b="0"/>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="APII_TextAreaNineSliceTemplate" inherits="APII_TextAreaTemplate" mixin="APII_TextBlockNineSliceMixin" virtual="true">
		<Frames>
			<Frame parentKey="Background" mixin="NineSlicePanelMixin" setAllPoints="true">
				<KeyValues>
					<KeyValue key="layoutType" value="UniqueCornersLayout" type="string"/>
					<KeyValue key="layoutTextureKit" value="ui-hud-minimap-button" type="string"/>
				</KeyValues>
				<Scripts>
					<OnLoad>
						self:OnLoad();
						self:SetVertexColor(1,1,1,1);
					</OnLoad>
				</Scripts>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<Frame name="APII_TextBlockTemplate" mixin="APII_TextBlockMixin" virtual="true">
		<Frames>
			<Frame parentKey="TextArea" inherits="APII_TextAreaTemplate">
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<Frame name="APII_TextBlockCopyStringTemplate" mixin="APII_TextBlockCopyStringMixin" virtual="true">
		<Frames>
			<Frame parentKey="TextArea" inherits="APII_TextAreaNineSliceTemplate">
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
			</Frame>
		</Frames>

		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<Frame name="APII_TextBlockTableTemplate" mixin="APII_TextBlockTableMixin" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" texelSnappingBias="0.0" snapToPixelGrid="false"/>
			</Layer>
		</Layers>

		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<Frame name="APII_SystemContentTemplate" mixin="APII_SystemContentMixin" virtual="true">
		<Size y="42" />
		<Anchors>
			<Anchor point="LEFT" />
			<Anchor point="RIGHT" />
		</Anchors>
		<KeyValues>
			<KeyValue key="expand" value="false" type="boolean"/>
		</KeyValues>
		<Frames>
			<Button parentKey="TitleButton">
				<Size y="30" />
				<Anchors>
					<Anchor point="TOP" />
					<Anchor point="LEFT" />
					<Anchor point="RIGHT" x="-1"/>
				</Anchors>
				<KeyValues>
					<KeyValue key="layoutIndex" value="1" type="number"/>
					<KeyValue key="expand" value="true" type="boolean"/>
				</KeyValues>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="BGLeft" atlas="Options_ListExpand_Left" alpha="0.8">
							<Size x="12"/>
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0" />
								<Anchor point="BOTTOMLEFT" x="0" y="0" />
							</Anchors>
						</Texture>
						<Texture parentKey="BGRight" atlas="Options_ListExpand_Right" alpha="0.8">
							<Size x="32"/>
							<Anchors>
								<Anchor point="TOPRIGHT" x="0" y="0" />
								<Anchor point="BOTTOMRIGHT" x="0" y="0" />
							</Anchors>
						</Texture>
						<Texture parentKey="BGMiddle" atlas="_Options_ListExpand_Middle" horizTile="true"  alpha="0.8">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.BGLeft" relativePoint="TOPRIGHT" />
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.BGRight" relativePoint="BOTTOMLEFT" />
							</Anchors>
						</Texture>
					</Layer>

					<Layer level="ARTWORK">
						<FontString parentKey="Label" inherits="GameFontHighlight" maxLines="1" justifyH="LEFT" justifyV="MIDDLE">
							<Anchors>
								<Anchor point="LEFT" x="30" y="0" />
								<Anchor point="RIGHT" relativeKey="$parent.BGRight" x="-40" y="0" />
							</Anchors>
						</FontString>
					</Layer>

					<Layer level="HIGHLIGHT">
						<Texture parentKey="HighlightLeft" atlas="Section_Expand_glowing_Left" alpha="0.5">
							<Size x="66"/>
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.BGLeft" y="-1"/>
								<Anchor point="BOTTOMLEFT" relativeKey="$parent.BGLeft" y="-1"/>
							</Anchors>
						</Texture>
						<Texture parentKey="HighlightRight" atlas="Section_Expand_glowing_right" alpha="0.5">
							<Size x="66"/>
							<Anchors>
								<Anchor point="TOPRIGHT" relativeKey="$parent.BGRight" y="-1"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.BGRight" y="-1"/>
							</Anchors>
						</Texture>
						<Texture parentKey="HighlightMiddle" atlas="Section_Expand_glowing_middle" horizTile="true" alpha="0.5">
							<Anchors>
								<Anchor point="TOPLEFT" relativeKey="$parent.HighlightLeft" relativePoint="TOPRIGHT"/>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.HighlightRight" relativePoint="BOTTOMLEFT"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<scripts>
					<OnClick>
						self:GetParent():OnClick();
					</OnClick>
				</scripts>
			</Button>
		</Frames>

		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Bg" alpha="0.7">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
					<Color r="0.15" g="0.15" b="0.15" />
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="HyperlinkGlow" alpha="0.8" atlas="!ItemUpgradeTooltip-NineSlice-EdgeLeft" hidden="true">
					<Size x="32"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.TitleButton" relativePoint="BOTTOMLEFT" y="4"/>
						<Anchor point="BOTTOM" />
					</Anchors>
					<Color r="0.4" g="0.7" b="1" />
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="2">
				<Texture alpha="0.6" atlas="Artifacts-HeaderBG">
					<Size y="20"/>
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.TitleButton" relativePoint="BOTTOM" y="4"/>
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT"/>
					</Anchors>
				</Texture>

				<Texture alpha="0.6" atlas="Artifacts-HeaderBG">
					<Size y="10"/>
					<Anchors>
						<Anchor point="BOTTOM" relativeKey="$parent.Bg" />
						<Anchor point="LEFT"/>
						<Anchor point="RIGHT"/>
					</Anchors>
					<TexCoords left="0" right="1" top="1" bottom="0"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
	</Frame>

	<EditBox name="APII_SearchBoxTempalte" inherits="SearchBoxTemplate" mixin="APII_SearchboxMixin" virtual="true">
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnTextChanged method="OnTextChanged"/>
			<OnEditFocusGained method="OnEditFocusGained"/>
			<OnEditFocusLost method="OnEditFocusLost"/>
		</Scripts>
	</EditBox>

	<Frame name="APII_Frame" inherits="PortraitFrameTemplate" mixin="APII_CoreMixin" movable="true" resizable="true" toplevel="true" frameStrata="MEDIUM" enableMouse="true" parent="UIParent" hidden="true">
		<Size x="800" y="500"/>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
		<Frames>

			<Frame parentKey="TitleBar" inherits="PanelDragBarTemplate">
				<Size y="32"/>
				<Anchors>
					<Anchor point="TOPLEFT"/>
					<Anchor point="TOPRIGHT"/>
				</Anchors>
			</Frame>

			<Frame parentKey="TopBar">
				<Size y="38"/>
				<Anchors>
					<Anchor Point="TOPLEFT" relativeKey="$parent.TitleBar" RelativePoint="BOTTOMLEFT" x="7" y="6"/>
					<Anchor Point="RIGHT" x="-2"/>
				</Anchors>

				<Frames>
					<CheckButton parentKey="HighlightToggleButton" inherits="WowStyle2IconButtonTemplate" mixin="APII_CheckButtonMixin">
						<Anchors>
							<Anchor point="LEFT" x="10" y="-1"/>
						</Anchors>
						<KeyValues>
							<KeyValue key="normalAtlas" type="string" value="Soulbinds_Tree_Conduit_Icon_Utility"/>
							<KeyValue key="iconWidth" type="number" value="24"/>
							<KeyValue key="iconHeight" type="number" value="24"/>
						</KeyValues>
						<Scripts>
							<OnClick method="OnClick"/>
						</Scripts>
					</CheckButton>

					<Button parentKey="HistoryBackButton" inherits="WowStyle2IconButtonTemplate" mixin="APII_HistoryButtonMixin">
						<Anchors>
							<Anchor point="LEFT" relativeKey="$parent.HighlightToggleButton" relativePoint="RIGHT" x="4" y="0"/>
						</Anchors>
						<HitRectInsets>
							<AbsInset left="2" right="3" top="2" bottom="4"/>
						</HitRectInsets>
						<KeyValues>
							<KeyValue key="normalAtlas" type="string" value="common-dropdown-icon-back"/>
							<KeyValue key="disabledAtlas" type="string" value="common-dropdown-icon-back-disabled"/>
							<KeyValue key="delta" value="-1" type="number"/>
						</KeyValues>
						<Scripts>
							<OnLoad method="OnLoad"/>
							<OnClick method="OnClick"/>
							<OnEnter method="OnEnter"/>
							<OnLeave method="OnLeave"/>
						</Scripts>
					</Button>
					<Button parentKey="HistoryForwardButton" inherits="WowStyle2IconButtonTemplate" mixin="APII_HistoryButtonMixin">
						<!-- <Size x="22" y="22"/> -->
						<Anchors>
							<Anchor point="LEFT" relativeKey="$parent.HistoryBackButton" relativePoint="RIGHT" x="0" y="0"/>
						</Anchors>
						<HitRectInsets>
							<AbsInset left="3" right="2" top="2" bottom="2"/>
						</HitRectInsets>
						<KeyValues>
							<KeyValue key="normalAtlas" type="string" value="common-dropdown-icon-next"/>
							<KeyValue key="disabledAtlas" type="string" value="common-dropdown-icon-next-disabled"/>
							<KeyValue key="delta" value="1" type="number"/>
						</KeyValues>
						<Scripts>
							<OnLoad method="OnLoad"/>
							<OnClick method="OnClick"/>
							<OnEnter method="OnEnter"/>
							<OnLeave method="OnLeave"/>
						</Scripts>
					</Button>
					
					

					<DropdownButton parentKey="FilterDropdown" inherits="WowStyle1FilterDropdownTemplate">
						<Size x="90" y="18"/>
						<KeyValues>
							<!-- <KeyValue key="menuRelativePoint" type="string" value="TOPRIGHT" /> -->
							<!-- <KeyValue key="menuPointX" type="number" value="-4" />
							<KeyValue key="menuPointY" type="number" value="1" /> -->
							<KeyValue key="resizeToText" type="boolean" value="false" />
						</KeyValues>
						<Anchors>
							<Anchor point="RIGHT" x="-14" y="-1"/>
						</Anchors>
					</DropdownButton>

					<DropdownButton parentKey="SearchGlobalDropdown" inherits="WowStyle1FilterDropdownTemplate">
						<Size x="114" y="18"/>
						<KeyValues>
							<KeyValue key="text" type="string" value="Search in _G"/>
							<!-- <KeyValue key="menuRelativePoint" type="string" value="TOPRIGHT" /> -->
							<!-- <KeyValue key="menuPointX" type="number" value="-4" />
							<KeyValue key="menuPointY" type="number" value="1" /> -->
							<KeyValue key="resizeToText" type="boolean" value="false" />
						</KeyValues>
						<Anchors>
							<Anchor point="RIGHT" relativeKey="$parent.FilterDropdown" relativePoint="LEFT" x="-6"/>
						</Anchors>
					</DropdownButton>

					<EditBox parentKey="GeneralSearch" inherits="APII_SearchBoxTempalte">
						<Size x="250" y="20" />
						<KeyValues>
							<KeyValue key="instructionText" value="General Search" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="LEFT" relativeKey="$parent.HistoryForwardButton" relativePoint="RIGHT" x="10" y="0"/>
							<Anchor point="RIGHT" relativeKey="$parent.SearchGlobalDropdown" relativePoint="LEFT" x="-6" y="0"/>
						</Anchors>
					</EditBox>
				</Frames>
			</Frame>

			<Frame parentKey="SystemScrollInset" useParentLevel="true" inherits="InsetFrameTemplate">
				<Size x="200"/>
				<Anchors> 
					<Anchor point="TOPLEFT" relativeKey="$parent.TopBar" relativePoint="BOTTOMLEFT"/>
					<Anchor point="BOTTOM" y="4"/>
				</Anchors>
			</Frame>

			<Frame parentKey="SystemContainer" mixin="APII_VerticalLayoutMixin">
				<Anchors> 
					<Anchor point="TOPLEFT" relativeKey="$parent.SystemScrollInset" x="4" y="-4"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.SystemScrollInset" x="-4" y="3"/>
				</Anchors>
				<Frames>
					<EditBox parentKey="SystemSearch" inherits="APII_SearchBoxTempalte">
						<Size y="20" />
						<KeyValues>
							<KeyValue key="instructionText" value="Search Systems" type="string"/>
							<KeyValue key="leftPadding" value="6" type="number"/>
						</KeyValues>
					</EditBox>

					<Frame parentKey="SystemScrollBox" inherits="WowScrollBoxList">
						<KeyValues>
							<KeyValue key="wheelPanScalar" value="1" type="number"/>
						</KeyValues>
					</Frame>
				</Frames>
				<Scripts>
					<OnLoad method="OnLoad" />
				</Scripts>
			</Frame>

			

			

			<EventFrame parentKey="SystemScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.SystemScrollInset" relativePoint="TOPRIGHT" x="5" y="-2"/>
					<Anchor point="BOTTOM" relativeKey="$parent.SystemScrollInset" relativePoint="BOTTOM" y="2"/>
				</Anchors>
			</EventFrame>

			<Button parentKey="ResizeButton" frameLevel="30" inherits="PanelResizeButtonTemplate">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="-2" y="3"/>
				</Anchors>
			</Button>

			<EventFrame parentKey="SystemContentScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.SystemScrollBar"/>
					<Anchor point="RIGHT" relativeKey="$parent.TopBar" x="-6"/>
					<Anchor point="BOTTOM" relativeKey="$parent.ResizeButton" relativePoint="TOP"/>
				</Anchors>
			</EventFrame>

			<Frame parentKey="SystemContentScrollInset" useParentLevel="true" inherits="InsetFrameTemplate">
				<Anchors> 
					<Anchor point="TOP" relativeKey="$parent.SystemScrollInset"/>
					<Anchor point="BOTTOM" relativeKey="$parent.SystemScrollInset"/>
					<Anchor point="LEFT" relativeKey="$parent.SystemScrollBar" relativePoint="RIGHT" x="5"/>
					<Anchor point="RIGHT" relativeKey="$parent.SystemContentScrollBar" relativePoint="LEFT" x="-5"/>
				</Anchors>

				<Frames>
					<Frame parentKey="SystemContent" mixin="APII_VerticalLayoutMixin">
						<Anchors>
							<Anchor point="TOPLEFT" relativeKey="$parent.SystemContentScrollInset" x="4" y="-4" />
							<Anchor point="BOTTOMRIGHT" relativeKey="$parent.SystemContentScrollInset" x="-4" y="3" />
						</Anchors>

						<Frames>
							<EditBox parentKey="SystemContentSearch" inherits="APII_SearchBoxTempalte" hidden="true">
								<Size y="20" />
								<KeyValues>
									<KeyValue key="instructionText" value="Search In System" type="string" />
									<KeyValue key="leftPadding" value="6" type="number" />
								</KeyValues>
							</EditBox>

							<Frame parentKey="SystemContentScrollBox" inherits="WowScrollBoxList" setAllPoints="true">
								<KeyValues>
									<KeyValue key="wheelPanScalar" value="1" type="number" />
								</KeyValues>
								<Frames>
									<Frame parentKey="ContentDummy" inherits="APII_SystemContentTemplate" hidden="true">
										<Anchors>
											<Anchor point="LEFT" />
											<Anchor point="RIGHT" />
										</Anchors>
									</Frame>
								</Frames>
							</Frame>
						</Frames>
						<Scripts>
							<OnLoad method="OnLoad" />
						</Scripts>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
		
		<Scripts>
			<OnSizeChanged method="OnSizeChanged"/>
			<OnLoad method="OnLoad"/>
			<OnUpdate method="OnUpdate"/>
			<OnShow method="OnShow"/>
			<OnHide>
				PlaySound(SOUNDKIT.IG_CHARACTER_INFO_CLOSE);
			</OnHide>
		</Scripts>
	</Frame>
